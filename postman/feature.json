	"item": [
		{
			"name": "Удаление комментария Администратором",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {\r",
							"    const api = new API(pm);\r",
							"    const rnd = new RandomUtils();\r",
							"    \r",
							"    let comment;\r",
							"    let userId, userId2, eventId;\r",
							"\r",
							"    try {\r",
							"        // Создание пользователей\r",
							"        const user = await api.addUser(rnd.getUser());\r",
							"        const user2 = await api.addUser(rnd.getUser());\r",
							"        userId = user.id;\r",
							"        userId2 = user2.id;\r",
							"\r",
							"        pm.collectionVariables.set(\"uid\", userId);\r",
							"        pm.collectionVariables.set(\"uid2\", userId2);\r",
							"\r",
							"        // Категория + событие\r",
							"        const category = await api.addCategory(rnd.getCategory());\r",
							"        const event = await api.addEvent(userId, rnd.getEvent(category.id));\r",
							"        eventId = event.id;\r",
							"\r",
							"        pm.collectionVariables.set(\"eventId\", eventId);\r",
							"\r",
							"        // Публикация и подача заявки\r",
							"        await api.publishEvent(eventId);\r",
							"        await api.publishParticipationRequest(eventId, userId2);\r",
							"\r",
							"        // Добавление комментария пользователем userId2 к событию\r",
							"        comment = await api.addPrivateComment(eventId, userId2, rnd.getComment());\r",
							"\r",
							"        pm.collectionVariables.set(\"commentId\", Number(comment.id));\r",
							"\r",
							"    } catch (err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных\", err);\r",
							"    }\r",
							"\r",
							"    // Подготовка тела запроса для последующего PATCH (или POST)\r",
							"    pm.request.body.update({\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify({\r",
							"            text: rnd.getComment().text\r",
							"        }),\r",
							"        options: { raw: { language: 'json' } }\r",
							"    });\r",
							"};\r",
							"\r",
							"// Пауза, чтобы дождаться завершения асинхронной подготовки\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => {\r",
							"    try {\r",
							"        await main();\r",
							"    } catch (e) {\r",
							"        console.error(e);\r",
							"    } finally {\r",
							"        clearInterval(interval);\r",
							"    }\r",
							"}, 100);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 204\", function () {\r",
							"    pm.response.to.have.status(204);\r",
							"});\r",
							"\r",
							"const previousComments = pm.collectionVariables.get(\"response_t\"); // JSON-строка?\r",
							"let source;\r",
							"\r",
							"try {\r",
							"    source = typeof previousComments === 'string' ? JSON.parse(previousComments) : previousComments;\r",
							"} catch (e) {\r",
							"    source = [];\r",
							"}\r",
							"\r",
							"const commentId = pm.collectionVariables.get('commentId');\r",
							"const eventId = pm.collectionVariables.get('eventId');\r",
							"const initialCount = source.length;\r",
							"\r",
							"pm.sendRequest({\r",
							"    url: pm.collectionVariables.get(\"baseUrl\") + \"/comments/events/\" + eventId,\r",
							"    method: 'GET'\r",
							"}, (error, response) => {\r",
							"    pm.test(\"Должны получить комментарии\", function () {\r",
							"        pm.expect(response.code).to.eql(200);\r",
							"    });\r",
							"\r",
							"    const updatedComments = response.json();\r",
							"    const updatedCount = updatedComments.length;\r",
							"\r",
							"\r",
							"    pm.test(\"Удалённый комментарий не должен присутствовать\", function () {\r",
							"        const found = updatedComments.some(c => c.id === Number(commentId));\r",
							"        pm.expect(found).to.eql(false);\r",
							"    });\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
