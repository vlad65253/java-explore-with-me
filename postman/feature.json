		{
			"name": "Получение комментария по его id",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {\r",
							"    const api = new API(pm);\r",
							"    const rnd = new RandomUtils();\r",
							"\r",
							"    try {\r",
							"        // Создание пользователя и категории\r",
							"        const user = await api.addUser(rnd.getUser());\r",
							"        const category = await api.addCategory(rnd.getCategory());\r",
							"\r",
							"        // Создание события\r",
							"        let eventBody = rnd.getEvent(category.id);\r",
							"        eventBody['requestModeration'] = true;\r",
							"        let event = await api.addEvent(user.id, eventBody);\r",
							"\r",
							"        // Публикация события\r",
							"        event = await api.publishEvent(event.id);\r",
							"\r",
							"        // Второй пользователь подаёт заявку\r",
							"        const submittedUser = await api.addUser(rnd.getUser());\r",
							"        await api.publishParticipationRequest(event.id, submittedUser.id);\r",
							"\r",
							"        // Сохраняем переменные\r",
							"        pm.collectionVariables.set('uid', user.id);\r",
							"        pm.collectionVariables.set('uid1', submittedUser.id);\r",
							"        pm.collectionVariables.set('eid', event.id);\r",
							"\r",
							"        // Создание комментария от submittedUser через приватный путь\r",
							"        const commentPayload = {\r",
							"            eventId: event.id,\r",
							"            text: rnd.getComment().text\r",
							"        };\r",
							"        const comment = await api.post(`/comments/users/${submittedUser.id}`, commentPayload);\r",
							"\r",
							"        // Сохраняем ID и тело комментария\r",
							"        pm.collectionVariables.set('commentId', comment.id);\r",
							"        pm.collectionVariables.set('response_t', comment);\r",
							"\r",
							"    } catch (err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
							"    }\r",
							"};\r",
							"\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => {\r",
							"    try {\r",
							"        await main();\r",
							"    } catch (e) {\r",
							"        console.error(e);\r",
							"    } finally {\r",
							"        clearInterval(interval);\r",
							"    }\r",
							"}, 100);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 200 и данные в формате json\", function () {\r",
							"    pm.response.to.be.ok;    \r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"const source = pm.collectionVariables.get('response_t');\r",
							"console.log(source, \"source\");\r",
							"const target = pm.response.json();\r",
							"console.log(target, \"target\");\r",
							"\r",
							"\r",
							"pm.test(\"Комментарий должен содержать поля: id, eventId, author, text, created\", function () {\r",
							"    pm.expect(target).to.contain.keys('id', 'eventId', 'author', 'text', 'created');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе\", function () {\r",
							"    pm.expect(source.id).equal(target.id, 'Id комментария должен соответствовать id комментария с указанным идентификатором');\r",
							"    pm.expect(source.eventId).equal(target.eventId, 'EventId комментария должен соответствовать eventId комментария с указанным идентификатором');\r",
							"    pm.expect(source.author).to.not.be.null;\r",
							"    pm.expect(source.author.id).equal(target.author.id, 'Id автора комментария должен соответствовать id автора комментария с указанным идентификатором');\r",
							"    pm.expect(source.text).equal(target.text, 'Текст комментария должен соответствовать тексту комментария с указанным идентификатором');\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
