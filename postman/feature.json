		{
			"name": "Изменение комментария  Администратором",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const main = async () => {\r",
							"    const api = new API(pm);\r",
							"    const rnd = new RandomUtils();\r",
							"    \r",
							"    let comment;\r",
							"    let userId, userId2, eventId;\r",
							"\r",
							"    try {\r",
							"        // Создание пользователей\r",
							"        const user = await api.addUser(rnd.getUser());\r",
							"        const user2 = await api.addUser(rnd.getUser());\r",
							"\r",
							"        pm.collectionVariables.set(\"uid\", user.id);\r",
							"        pm.collectionVariables.set(\"uid2\", user2.id);\r",
							"        userId = user.id;\r",
							"        userId2 = user2.id;\r",
							"\r",
							"        // Создание категории и события\r",
							"        const category = await api.addCategory(rnd.getCategory());\r",
							"        const event = await api.addEvent(userId, rnd.getEvent(category.id));\r",
							"\r",
							"        pm.collectionVariables.set(\"eventId\", event.id);\r",
							"        eventId = event.id;\r",
							"\r",
							"        // Публикация события и заявка на участие\r",
							"        await api.publishEvent(eventId);\r",
							"        await api.publishParticipationRequest(eventId, userId2);\r",
							"\r",
							"        // Создание комментария через приватный маршрут: /comments/users/{userId}\r",
							"        const commentPayload = {\r",
							"            eventId: eventId,\r",
							"            text: rnd.getComment().text\r",
							"        };\r",
							"        comment = await api.post(`/comments/users/${userId2}`, commentPayload);\r",
							"\r",
							"        pm.collectionVariables.set(\"commentId\", Number(comment.id));\r",
							"\r",
							"    } catch (err) {\r",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);\r",
							"    }\r",
							"\r",
							"    // Подготовка тела запроса (например, для обновления)\r",
							"    pm.request.body.update({\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify({\r",
							"            text: rnd.getComment().text\r",
							"        }),\r",
							"        options: { raw: { language: 'json' } }\r",
							"    });\r",
							"};\r",
							"\r",
							"const interval = setInterval(() => {}, 1000);\r",
							"\r",
							"setTimeout(async () => {\r",
							"    try {\r",
							"        await main();\r",
							"    } catch (e) {\r",
							"        console.error(e);\r",
							"    } finally {\r",
							"        clearInterval(interval);\r",
							"    }\r",
							"}, 100);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 200 и данные в формате json\", function () {\r",
							"    pm.response.to.be.ok;    \r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"const source = JSON.parse(pm.request.body.raw);\r",
							"const target = pm.response.json();\r",
							"\r",
							"pm.test(\"Комментарий должен содержать поле: text\", function () {\r",
							"pm.expect(target).to.have.property('text');\r",
							"});\r",
							"\r",
							"pm.test(\"Данные в ответе должны соответствовать данным в запросе\", function () {\r",
							"    pm.expect(target.text).to.not.be.null;\r",
							"    pm.expect(source.text).equal(target.text, 'Текст комментария должен совпадать с отправленным');\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
